# Example env file for GitHub (DO NOT store secrets here)
# Provide only variable names and safe example values.

# Path to Firebase service account JSON - in CI you'd mount this as a secret
FIREBASE_CRED_PATH=/tmp/service-account.json

# Firebase Web API key - set this in GitHub Actions secrets
FIREBASE_API_KEY=${{ secrets.FIREBASE_API_KEY }}

# Test user id
TEST_UID=test-user-postman

# Journal upload settings
JOURNAL_FILE=/tmp/journal.txt
API_URL=https://your-api.example.com/logs
AUTH_TOKEN=${{ secrets.AUTH_TOKEN }}
TIMEZONE=America/New_York
SLEEP_SECONDS=1
